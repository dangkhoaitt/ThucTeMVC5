
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var slides = (List<Model.EF.Slide>)ViewBag.Slides;
    var listNewProducts = (List<Model.EF.Product>)ViewBag.NewProducts;
    var listFreatureProduct = (List<Model.EF.Product>)ViewBag.FeatureProducts;
}
@section leftMenu{
    <div class="col-sm-3">
        <div class="left-sidebar">
            <h2>Danh Mục Sản Phẩm</h2>

            @{Html.RenderAction("ProductCategory", "Product");}
            @{Html.RenderAction("Trademark", "Product");}
        </div>
    </div>
}
@section slide{
    <section id="slider">
        <!--slider-->
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                            <li data-target="#slider-carousel" data-slide-to="1"></li>
                            <li data-target="#slider-carousel" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            @foreach (var item in slides)
                            {

                                if (item.DisplayOrder == 1)
                                {
                                    <div class="item active">
                                        <div class="col-sm-6">
                                            <h1><span>E</span>-SHOPPER</h1>
                                            <h2>Free E-Commerce Template</h2>
                                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                            <button type="button" class="btn btn-default get">Mua Ngay</button>
                                        </div>
                                        <div class="col-sm-6">
                                            <a href="@item.Link"><img src="@item.Image" class="girl img-responsive" alt="" /></a>
                                            @*<img src="/Assets/client/images/home/pricing.png" class="pricing" alt="" />*@
                                        </div>
                                    </div>
                                }
                                if (item.DisplayOrder != 1)
                                {
                                    <div class="item">
                                        <div class="col-sm-6">
                                            <h1><span>E</span>-SHOPPER</h1>
                                            <h2>100% Responsive Design</h2>
                                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
                                            <button type="button" class="btn btn-default get">Mua Ngay</button>
                                        </div>
                                        <div class="col-sm-6">
                                            <a href="@item.Link"><img src="@item.Image" class="girl img-responsive" alt="" /></a>
                                            @*<img src="/Assets/client/images/home/pricing.png" class="pricing" alt="" />*@
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </section>
}

<div class="col-sm-9 padding-right">

    <div class="features_items">
        <!--features_items-->
        <h3 class="title text-center">Sản Phẩm Hot</h3>
        <div class="row">
            @foreach (var item in listFreatureProduct)
            {
                var url = "/chi-tiet/" + item.MetaTile + "-" + item.ID;
